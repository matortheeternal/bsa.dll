<UserControl x:Class="ModAnalyzer.Views.AnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:ModAnalyzer.Utils"
             mc:Ignorable="d"
             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=AnalysisViewModel}">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="10">
            <Button Content="RESET" Command="{Binding ResetCommand, Mode=OneTime}" />
            <Button Content="VIEW OUTPUT" Command="{Binding ViewOutputCommand, Mode=OneTime}" Margin="5 0 0 0" />
        </StackPanel>

        <StatusBar VerticalAlignment="Bottom" Background="{DynamicResource PrimaryHueDarkBrush}"
                   DockPanel.Dock="Bottom">
            <Label Content="{Binding ProgressMessage, Mode=OneWay}" />
        </StatusBar>

        <ScrollViewer x:Name="ScrollViewer" utils:ScrollViewerExtensions.AutoScrollToEnd="True">
            <TextBox Text="{Binding Log, Mode=OneWay}" />
        </ScrollViewer>
    </DockPanel>
</UserControl>