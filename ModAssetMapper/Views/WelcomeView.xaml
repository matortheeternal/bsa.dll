<UserControl x:Class="ModAssetMapper.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModAssetMapper.Views"
             mc:Ignorable="d"
             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=WelcomeViewModel}">
    <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center">
        <Image Source="mod-picker256.png" Stretch="Fill" Height="160" Width="160" />

        <StackPanel Orientation="Horizontal">
            <Label Content="Drag and drop a mod archive or" Style="{StaticResource DescriptionHeaderStyle}"/>
            <Button Command="{Binding BrowseCommand, Mode=OneTime}" VerticalAlignment="Center"  Padding="5" Margin="5 0 0 0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Browse..." FontSize="14" Margin="0 0 5 0" />
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
