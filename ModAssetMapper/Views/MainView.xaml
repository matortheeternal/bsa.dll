<controls:MetroWindow x:Class="ModAssetMapper.Views.MainView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:views="clr-namespace:ModAssetMapper.Views"
                      xmlns:viewModels="clr-namespace:ModAssetMapper.ViewModels"
                      xmlns:local="clr-namespace:ModAssetMapper"
                      mc:Ignorable="d"
                      Title="Mod Asset Mapper" 
                      TitleCaps="False"
                      Height="410" Width="800" MinWidth="410" MinHeight="410"
                      DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainViewModel}">
    <controls:MetroWindow.Resources>
        <DataTemplate DataType="{x:Type viewModels:WelcomeViewModel}">
            <views:WelcomeView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:AssetListViewModel}">
            <views:AssetListView />
        </DataTemplate>
    </controls:MetroWindow.Resources>

    <ContentControl Content="{Binding CurrentViewModel}" Margin="15" />
</controls:MetroWindow>
